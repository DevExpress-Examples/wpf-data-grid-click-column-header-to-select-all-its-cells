<Window x:Class="B183292SelectingColumnsByClickOnHeader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        Title="MainWindow"
        Width="525"
        Height="350">

    <dxg:GridControl AutoGenerateColumns="AddNew" ItemsSource="{Binding}" SelectionMode="Cell">
        <dxg:GridControl.View>
            <dxg:TableView Name="view" ColumnHeaderClick="ColumnHeaderClick" />
        </dxg:GridControl.View>
    </dxg:GridControl>

</Window>
